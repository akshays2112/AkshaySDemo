@page "/"
@namespace EpicAkSBlazorSMusicClient.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EpicAkSBlazorSMusicClient</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">
    <link href="css/site.css" rel="stylesheet" />
    <link href="EpicAkSBlazorSMusicClient.styles.css" rel="stylesheet" />
    <script src="~/jquery-3.5.1.js"></script>
    <script src="~/bootstrap.min.js"></script>

    <script>
        function clickSvg(svgPathId, divId) {
            if (!$(svgPathId).attr('transform')) {
                $(svgPathId).attr('transform', 'rotate(180 17 17)');
                $(divId).hide();
            } else {
                $(svgPathId).removeAttr('transform');
                $(divId).show();
            }
        }
    </script>
</head>
<body class="bg-dark text-white">
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
