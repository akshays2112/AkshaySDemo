@page "/Recipe/deleterecipe/{recipeId}"
@inject NavigationManager Navigation
<h2>Delete</h2>
<h3>Are you sure you want to delete recipe : @recipe.Name</h3>
<br />
<div class="col-md-4">
    <table class="table">
        <tr>
            <td>Name</td>
            <td>@recipe.Name</td>
        </tr>
        <tr>
            <td>Description</td>
            <td>@recipe.Description</td>
        </tr>
        <tr>
            <td>Comment</td>
            <td>@recipe.Comment</td>
        </tr>
        <tr>
            <td>Creator's Name</td>
            <td>@recipe.CreatorsName</td>
        </tr>
        <tr>
            <td>Notes</td>
            <td>@recipe.Notes</td>
        </tr>
    </table>
    <div class="form-group">
        <input type="submit" value="Delete" @onclick="@Delete" class="btn btn-primary" />
        <input type="submit" value="Cancel" @onclick="@cancel" class="btn btn-warning" />
    </div>
</div>
@functions {
    [Parameter]
    public string recipeId { get; set; }
    Recipe recipe = new Recipe();
    AkshaySDemoDbOperations dbop = new AkshaySDemoDbOperations();
    protected override void OnInitialized()
    {
        recipe = dbop.GetRecipe(Convert.ToInt32(recipeId));
    }
    protected void Delete()
    {
        dbop.DeleteRecipe(Convert.ToInt32(recipeId));
        Navigation.NavigateTo("/Recipe/fetchrecipe");
    }
    void cancel()
    {
        Navigation.NavigateTo("/Recipe/fetchrecipe");
    }
}
